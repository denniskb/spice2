{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		// build tasks
		{
			"label": "Third Party",
			"type": "shell",
			"command": "chmod 700 build_third_party.sh && ./build_third_party.sh",
			"group": "build",
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "rm -rf build",
			"group": "build",
		},
		{
			"label": "Debug",
			"type": "shell",
			"command": "mkdir -p build/debug && cd build/debug && cmake -DCMAKE_BUILD_TYPE=Debug ../.. && make -j 8",
			"group": "build",
		},
		{
			"label": "Release",
			"type": "shell",
			"command": "mkdir -p build/release && cd build/release && cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_FLAGS_RELEASE=\"-O2\" ../.. && make -j 8",
			"group": "build",
		},
		{
			"label": "Perf",
			"type": "shell",
			"command": "mkdir -p build/perf && cd build/perf && cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_CXX_FLAGS_RELEASE=\"-O2 -ggdb\" ../.. && make -j 8",
			"group": "build",
		},
		// test/run tasks
		{
			"label": "Unit Tests",
			"type": "shell",
			"command": "./build/release/test",
			"group": "test",
			"dependsOn": "Release",
		},
		{
			"label": "Benchmarks",
			"type": "shell",
			"command": "./build/release/bench",
			"args": [
				"--benchmark_filter=${input:bench_filter}"
			],
			"group": "test",
			"dependsOn": "Release",
		},
		{
			"label": "Samples",
			"type": "shell",
			"command": "./samples/runsample.sh",
			"args": [
				"${input:sample_filter}"
			],
			"group": "test",
			"dependsOn": "Release",
		}
	],
	"inputs": [
		{
			"id": "bench_filter",
			"type": "promptString",
			"default": "",
			"description": "benchmark name"
		},
		{
			"id": "sample_filter",
			"type": "promptString",
			"default": "",
			"description": "sample name"
		}
	]
}